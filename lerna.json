{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "ignoreChanges": ["*.md"],
    "version": {
      "message": "chore(release): publish %s"
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish"
    }
  },
  "version": "independent"
}
